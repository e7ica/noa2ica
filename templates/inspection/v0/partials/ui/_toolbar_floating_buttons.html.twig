<div class="absolute s-4 bottom-[10%] w-full" style="">
    <div class="flex relative bottom-0 items-center justify-center bg-blue-100 mx-24 sm:mx-[40vw] p-2 rounded-full  " style="bottom: 0%; left: 0%;">
        <div class="flex flex-row space-x-4">
            <button
                    id="comments-button"
                    class="hover:w-12 group transition duration-300 ease-in-out">
                <span class="text-4xl font-bold hover:text-8xl">
                    📝
                </span>
            </button>
            <button
                    id="attachments-button"
                    class="hover:w-8 group transition duration-300 ease-in-out">
                <span class="text-4xl font-bold hover:text-8xl">
                    📎
                </span>
            </button>
        </div>
    </div>
</div>

<script type="module">
    const commentsButton = document.getElementById('comments-button');
    commentsButton.addEventListener('click', (e) => {
        e.preventDefault();
        // show comments modal
        document.getElementById('commentModal').classList.remove('hidden');
    });
    const attachmentButton = document.getElementById('attachments-button');
    attachmentButton.addEventListener('click', (e) => {
        e.preventDefault();
        // show attachments modal
        document.getElementById('comprobanteModal').classList.remove('hidden');
    });
</script>