<div class="
container flex flex-row
items-center justify-around
mx-0 mt-0 mb-0
bg-blue-100 text-blue-900 px-6 py-4 rounded
">
    <div class="flex flex-col w-full h-auto items-start md:p-8">
        <h2 class=" flex-auto flex text-xl font-bold md:text-2xl">
            {{ inspection.title }}
        </h2>
        <h3 class="flex-auto flex text-md font-bold text-gray-600
                   md:text-xl">
            {{ inspection.business }}
        </h3>
    </div>
    <div class="relative flex flex-col w-14 h-14 items-end justify-end justify-start md:p-8">
        <button class="flex justify-end w-14 h-14 items-center mb-0 mt-0" aria-label="Open or Edit">
            <i class="text-3xl font-bold bi bi-pencil-square mb-0 md:text-4xl"></i>
        </button>
        <p class="absolute top-8 mt-1 text-md font-bold text-black ml-2
                  md:text-xl">
            #{{ "%05d"|format(inspection.id) }}
        </p>
    </div>
</div>