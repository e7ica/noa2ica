<div class="js-comments-section hidden md:w-full  bg-white rounded-lg  p-4 w-96">
    <!-- Contenedor del campo de texto con ícono -->
    <div class="relative flex flex-col">
        <!-- Ícono de lápiz en posición relativa -->
        <i class="fas fa-pencil-alt absolute right-3 top-3 text-blue-500"></i>

        <!-- Campo de texto estilizado -->
        <textarea
                id="comment"
                name="comment"
                class="p-4 border-2 border-dashed border-gray-300 rounded-lg h-32 md:w-full md:h-64 focus:outline-none focus:border-blue-500 resize-none"
                placeholder="Cuéntanos tus observaciones">{{ question.comment }}</textarea>
    </div>
</div>