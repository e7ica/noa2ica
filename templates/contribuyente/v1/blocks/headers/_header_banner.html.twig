<div class="flex items-center justify-between content-center bg-blue-100 p-2 rounded">
   <h3 class="border-b-2 font-bold border-gray-200 px-8 w-full text-center
              md:text-xl text-md">
      Resumen de Inspecci√≥n
   </h3>
   <span class="
        inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
        {% if inspection.status == 'abierta' %}
            bg-green-100 text-green-800
        {% elseif inspection.status == 'finalizada' %}
            bg-blue-100 text-blue-800
        {% elseif inspection.status == 'rechazada' %}
            bg-red-100 text-red-800
        {% elseif inspection.status == 'aprobada' %}
            bg-green-100 text-green-800
        {% elseif inspection.status == 'emplazada' %}
            bg-yellow-100 text-yellow-800
        {% elseif inspection.status == 'cancelada' %}
            bg-gray-100 text-gray-800
        {% elseif inspection.status == 'pausada' %}
            bg-yellow-100 text-yellow-800
        {% endif %}
    ">
      {{ inspection.status | capitalize }}
   </span>
</div>